{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}{% endblock %}

{% block body %}
    <main>
        <h1>User</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Логин</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Роли</th>
                <td>{{ user.roles|join(', ') }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('user_index') }}">Назад к списку пользователей</a> |
        <a href="{{ path('user_edit', {'id': user.id}) }}">Редактировать</a> |
        <a href="#" onclick="document.getElementById('delete_user').click(); return false;">Удалить</a>

        {{ include('user/_delete_form.html.twig') }}
    </main>

{% endblock %}

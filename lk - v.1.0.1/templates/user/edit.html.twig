{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <main>
        <h1>Edit User</h1>

        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.username) }}
        <br />
        {{ form_row(form.roles) }}
        <br />
        {{ form_row(form.password) }}

        <button class="btn btn-primary">{{ button_label|default('Сохранить') }}</button>
        <button class="btn btn-danger" onclick="document.getElementById('delete_user').click(); return false;">Удалить</button>
        {{ form_end(form) }}
        {{ include('user/_delete_form.html.twig') }}

        <br /><a href="{{ path('user_index') }}">Назад к списку пользователей</a>
    </main>

{% endblock %}
